{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./core/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "core/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
